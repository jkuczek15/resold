<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/resold/product" method="POST">
        <service class="Resold\Api\Api\ProductManagementInterface" method="createProduct"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/resold/product/:productId" method="GET">
        <service class="Resold\Api\Api\ProductManagementInterface" method="getProduct"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/resold/product/mine/:productId" method="GET">
        <service class="Resold\Api\Api\ProductManagementInterface" method="isProductMine"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/resold/product/delivery" method="POST">
        <service class="Resold\Api\Api\ProductManagementInterface" method="setDelivery"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/resold/product/offer" method="POST">
        <service class="Resold\Api\Api\ProductManagementInterface" method="setPrice"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/resold/vendor" method="POST">
        <service class="Resold\Api\Api\VendorManagementInterface" method="createVendor"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/resold/vendor/orders" method="GET">
        <service class="Resold\Api\Api\VendorManagementInterface" method="getVendorOrders"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/resold/notifications/send" method="POST">
        <service class="Resold\Api\Api\NotificationManagementInterface" method="sendNotificationMessage"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
