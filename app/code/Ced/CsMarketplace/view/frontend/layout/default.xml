<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
			<referenceBlock name="top.links">
				<referenceBlock name="authorization-link" remove="true" />
				<block class="Magento\Framework\View\Element\Html\Link\Current" name="i-am-a-vendor-link-header" ifconfig="ced_vshops/general/vshoppage_title_enable">
					<arguments>
						<argument name="label" xsi:type="helper" helper="Ced\CsMarketplace\Helper\Data::getIamaVendorLink"/>
						<argument name="path" xsi:type="string">sell</argument>
					</arguments>
				</block>
				<block class="Magento\Framework\View\Element\Html\Link\Current" name="csmarketplace-link-header" ifconfig="ced_vshops/general/vshoppage_top_title_enable">
					<arguments>
					    <argument name="label" xsi:type="helper" helper="Ced\CsMarketplace\Helper\Data::getCsMarketplaceLink"/>
							<argument name="path" xsi:type="string">csmarketplace/vshops/index</argument>
					</arguments>
				</block>
				<block class="Magento\Framework\View\Element\Html\Link\Current" name="help-link-header">
					<arguments>
						<argument name="label" xsi:type="string">Help</argument>
						<argument name="path" xsi:type="string">help</argument>
					</arguments>
				</block>
				<block class="Magento\Customer\Block\Account\AuthorizationLink" name="about-us-header" template="Magento_Customer::about_us/link/authorization.phtml">
					<arguments>
						<argument name="label" xsi:type="string">About Us</argument>
						<argument name="path" xsi:type="string">about-us-resold</argument>
					</arguments>
				</block>
				<block cacheable="false" class="Magento\Customer\Block\Account\AuthorizationLink" name="authorization-link-new" template="Magento_Customer::account/link/authorization.phtml"/>
			</referenceBlock>
  </body>
</page>
