/** @var \Magento\Customer\Block\Account\AuthorizationLink $block */
$dataPostParam = '';
$logged_in = $block->isLoggedIn();
if ($logged_in) {
    $dataPostParam = sprintf(" data-post='%s'", $block->getPostParams());
}

// custom Login / Signup link
$label = $block->getLabel();
$label = str_replace('Sign In', 'Login / Signup', $label);

// custom home button
$label = str_replace('Sign Out', '<span style="font-size: 1.2em" class="ic ic-user"></span></span>', $label);

// redirect to the account page
$dataPostParam = str_replace('\/logout', '/listings', $dataPostParam);
$href = str_replace('/logout', '/listings', $block->getLinkAttributes());

if(strpos($href, 'login') !== FALSE){
  // $href = "href='/customer/account/create?referer=".urlencode('https://'.$_SERVER['HTTP_HOST'].$_SERVER['REQUEST_URI']) . "'";
  $href = '';
}
?>
<li class="authorization-link" data-label="<?php echo $this->helper(\Magento\Framework\EscapeHelper::class)->escapeHtmlAttr(__('or')); ?>">
    <a style="cursor: pointer" class="social-login sign-in-link" <?= $href ?>>
        <?php echo $label; ?>
    </a>
</li>
