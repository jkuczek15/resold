    <?php $_item = $_items[0]; ?>
    <table class="email-items" style="width: 93% !important">
        <thead>
            <tr>
                <th class="item-info">
                    <?= /* @escapeNotVerified */  __('Item - ' . $_item->getName()); ?>
                </th>
                <th colspan=2 class="item-info">
                    <?= /* @escapeNotVerified */  __('Price'); ?>
